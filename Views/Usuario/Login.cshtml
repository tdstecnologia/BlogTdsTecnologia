@model BlogTdsTecnologia.Models.UsuarioModel.Usuario

@{
    Layout = "_Layout";
}

<form asp-action="Login" method="post">

    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <div><span asp-validation-for="Email" class="text-danger"></span></div>
            <label>Email</label>
            <input type="email" class="form-control" placeholder="Email" asp-for="Email" required data-validation-required-message="Email">
            <p class="help-block text-danger"></p>
        </div>
    </div>

    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Senha</label>
            <input type="password" class="form-control" placeholder="Senha" asp-for="Senha" required data-validation-required-message="Senha" />
            <p class="help-block text-danger"></p>
        </div>
    </div>

    <br />
    <div class="form-group d-flex justify-content-center">
        <input class="btn btn-primary text-center align-content-center" type="submit" value="Entrar" />
    </div>
   
</form>
