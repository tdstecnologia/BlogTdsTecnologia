@using BlogTdsTecnologia.Models.PostModel
@model Post
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
<script src="~/lib/linecontrol/editor.js"></script>
<link href="~/lib/linecontrol/editor.css" rel="stylesheet" />

<form asp-action="Novo" method="post">

    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Título</label>
            <input type="text" class="form-control" placeholder="Título" asp-for="Titulo" required data-validation-required-message="Título">
            <p class="help-block text-danger"></p>
        </div>
    </div>

    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Resumo</label>
            <textarea rows="3" class="form-control" placeholder="Resumo" asp-for="Resumo" required data-validation-required-message="Resumo"></textarea>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <br />

    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Texto</label>
            <div class="col-lg-12 nopadding">
                <textarea asp-for="Texto" id="txtEditor"></textarea>
            </div>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <br />
    <section class="row justify-content-center mb-5">
        <input type="submit" class="btn btn-primary" value="Salvar" />
    </section>

</form>

<script>
    $(document).ready(function () {
        $("#txtEditor").Editor();
    });
</script>

